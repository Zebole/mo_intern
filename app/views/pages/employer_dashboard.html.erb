<div class="container">

  <div class="p-5">
    <h2 class="heading"> <span class="test">My Jobs</span></h2>
    <p class ="litle-text", style="text-align:center">Find the jobs you posted, scheduled interviews and applicants</p>
  </div>

  <div class="employer-grid">
    <div class="employer-box">
      <div class="employer-count">
        <p><%= @my_applicants_size %></p>
      </div>
      <div class="employer-paragraph">
        <p>Applicants</p>
      </div>
    </div>

    <div class="employer-box">
      <div class="employer-count">
        <p><%= @my_count %></p>
      </div>
      <div class="employer-paragraph">
        <p>Jobs posted</p>
      </div>
    </div>

    <div class="employer-box">
      <div class="employer-count">
        <p>4</p>
      </div>
      <div class="employer-paragraph">
        <p>Interviews</p>
      </div>
    </div>
  </div>
  <br>

  <br>
  <% @my_jobs.each do |job|  %>
  <div class="card no-hover">
    <div class="card-header d-flex justify-content-between">
      <h5><%= job.title %></h5>
    </div>
    <div class="card-body">
      <p class="card-text"><%= job.description.truncate_words(30)%></p>



      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#job-<%= job.id %>">
        Launch demo modal
      </button>

      <!-- Modal -->
      <div class="modal fade" id="job-<%= job.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <h2><%= job.applications.size %> Applicants</h2><hr />
                  <div class="list-applicants w-100">
                  <% job.applications.each do |applicant| %>
                  <div class="d-flex justify-content-between">
                    <span><%= applicant.user.first_name %></span>
                    <span><%= link_to " ðŸ“· Join interview", interview_path(applicant.interviews.first) if applicant.interviews.any? %></span>
                    <span><%= link_to " ðŸ”Ž Voir le profil", application_path(applicant.id) %></span>
                  </div>
                  <% end %>
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>



      <div style="text-align:center">
        <%= link_to "View" , job_path(job), class: "btn btn-primary" %>
        <%= link_to "Remove", job_path(job), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"%>
      </div>
    </div>
  </div>
  <% end %>
</div>
<br>

  <div style="text-align:center">
    <%= link_to "Post an internship", new_organisation_job_path(current_user.organisation), class: "btn btn-primary" %>
  </div>
  <br>

  <div class="footer">
    <div class="box-container">
      <div class="box">
        <h3>About Us</h3>
        <p>We are a team of commited young graduates who are helping to connect aspiring job seekers with great employers. We have a history of 15 years. We have had more than 100,000 students using our website to apply for internships.</p>
      </div>
      <div class="box">
        <h3>Follow us</h3>
        <a href="#">Facebook</a>
        <a href="#">Instagram</a>
        <a href="#">LinkedIn</a>
        <a href="#">Twitter</a>
        <a href="#">Youtube</a>
      </div>
      <div class="box">
        <h3>Legal</h3>
        <a href="#">Terms</a>
        <a href="#">Privacy</a>
      </div>
    </div>
</div>


