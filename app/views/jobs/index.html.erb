  <% @jobs.each do |job|  %>
  <div class="card">
    <div class="card-header d-flex justify-content-between">
      <h5><%= job.organisation.name%></h5>
      <h5><%= job.organisation.city %></h5>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= job.title %></h5>
      <p class="card-text"><%= job.description.truncate_words(30)%></p>
      <%= link_to "👉 Apply", applications_path(job_id: job.id), method: :post, class: "btn btn-primary" %>
      <%= link_to "🔍 View", job_path(job), class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
