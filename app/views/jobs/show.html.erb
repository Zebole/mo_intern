<div class="container">
  <div class="image-square">
    <%= image_tag "back.jpeg", width: 200 %>
    <h1><%= @job.title %></h1>
    <h3><p>Category: </p><%= @job.category %></h3>
    <h3><p>Deadline: </p><%= @job.deadline %></h3>
    <h3><p>Duration: </p><%= @job.duration %></h3>
    <h3><p>Rs </p><%= @job.salary %><p>/month</p></h3>
  </div>
  <div class="text-simple">
    <p>About</p>
    <p><%= @job.organisation.description %></p>
    <!-- Add image of company using cloudinary-->
    <% if @job.photo.attached? %>
      <%= cl_image_tag @job.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
     <%= image_tag 'great.png', height: 300 %>
    <% end %>
    <%= link_to "Learn more about #{@job.organisation.name}", organisation_path(@job.organisation) %>
    <p>Job Description</p>
    <p><%= @job.description %></p>
  </div>
  <%= link_to "Apply", new_application_path(job_id: job.id) %>
  <%= link_to "Back to job listings", jobs_path %>
  <div class="footer">
    <p>Privacy Policy</p>
    <p>About us</p>
  </div>
</div>
