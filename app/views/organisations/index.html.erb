
<div class="container">

  <div class="container d-flex align-items-center mt-1 mb-5" style="height:100px; border-radius:6px; background-color: rgb(255, 233, 129);">
     <div>
      <%= form_tag organisations_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      style: "width: 900px; border-radius:6px; border:1px;",
      placeholder: "Find the tribe you belong to"
      %>
    </div>
    <div>
      <%= submit_tag "Search", class: "px-5 btn btn-primary btn-sm" %>
      <% end %>
    </div>  
  </div>

  <div class="container d-flex align-items-center mt-3" style="width:900px">
    <div class="card-grid">
      <% @organisations.each do |organisation| %>
      <!--<li>-->
        <div class="card orga-card" style="width:300px;" >
          <%#= image_tag 'great.png', height: 200, class: "card-img-top" %>
          <% if organisation.photo.attached? %>
             <%= cl_image_tag organisation.photo.key, height: 200, width: 200, crop: :fill %>
           <% else %>
             <%= image_tag 'great.png', height: 200, class: "card-img-top" %>
           <% end %>
              <div class="card-body">
                 <p class="card-text">
                   <%= organisation.description.first(305)+'...' %><br>
                 </p>
                <%= link_to "View", organisation_path(organisation), class: "text-center btn btn-primary btn-sm mt-2", style: "width:250px;" %>
             </div>
         </div>
      <% end %>
   </div>
 </div>
 <div class="text-right">
   <%= link_to "Create organisation", new_organisation_path, class: "btn btn-primary btn-sm mt-2" %>
 </div>
</div>
