<div class="container">
  <div class="search-bar">
    <%= form_tag jobs_path, method: :get do %>
    <div class="d-flex">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find an organisation"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
  <div>
    <h2 class="heading"><span class="test">All Organisations</span></h2>
  </div>
  <div class="card-grid">
    <% @organisations.each do |organisation| %>
    <div class="card-box">
      <% if organisation.photo.attached? %>
        <%= cl_image_tag organisation.photo.key, class: "card-logo"%>
      <% else %>
        <%= image_tag 'great.png', class: "card-logo"%>
      <% end %>
      <div class="card-paragraph">
        <p><%= organisation.description.truncate(150) %></p>
      </div>
      <%= link_to "View", organisation_path(organisation), class: "botton" %>
    </div>
    <% end %>
  </div>
</div>
<br></br>
<br></br>

<div class="footer">
    <div class="box-container">
      <div class="box">
        <h3>About Us</h3>
        <p>We are a team of commited young graduates who are helping to connect aspiring job seekers with great employers. We have a history of 15 years. We have had more than 100,000 students using our website to apply for internships.</p>
      </div>
      <div class="box">
        <h3>Follow us</h3>
        <a href="#">Facebook</a>
        <a href="#">Instagram</a>
        <a href="#">LinkedIn</a>
        <a href="#">Twitter</a>
        <a href="#">Youtube</a>
      </div>
      <div class="box">
        <h3>Legal</h3>
        <a href="#">Terms</a>
        <a href="#">Privacy</a>
      </div>
    </div>
</div>

